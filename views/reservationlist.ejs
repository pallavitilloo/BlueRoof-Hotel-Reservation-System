<%- include('_header') %>

    <br/>   
    <h2>List of bookings</h2>
    <br/>
    <div class="container lightbluebg">
      <%
        var list = '';
        for (i = 0; i < itemlist.length; i++) {
          list += '<div class="row"><div class="col-2"><strong>Booking ID</strong></div><div class="col-4">'+ itemlist[i]._id +'</div></div>';
          list += '<div class="row"><div class="col-2"><strong>Name</strong></div><div class="col-4">' + itemlist[i].FirstName +
            '&nbsp;'+ itemlist[i].LastName +'</div></div>' + 
            '<div class="row"><div class="col-2"><strong>Email</strong></div><div class="col-4">' + itemlist[i].Email +'</div></div>' + 
            '<div class="row"><div class="col-2"><strong>Dates</strong></div><div class="col-4">' + itemlist[i].FromDate +' to '
              + itemlist[i].ToDate + '</div></div>' + 
              '<div class="row"><div class="col-2"><strong>Guests</strong></div><div class="col-4">' + itemlist[i].Adults +' adults, '
                + itemlist[i].Children + ' children</div></div><hr/>';
        }
      %>
      <%- list %>
      </div>


<%- include('_footer') %>
